<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="shop.interhouse.orm.repository.BoardMapper">

	<sql id="selectFromBoard">
		SELECT BNO , TITLE , CONTENT , WRITER , VIEW_CNT , COMMENT_CNT , REG_DATE 
		FROM T_BOARD	
	</sql>
	
	<select id="select" parameterType="int" resultType="BoardDto">
		<include refid="selectFromBoard" />
		where bno = #{bno} 
	</select>
	
	<delete id="deleteAll">
		delete from t_board
	</delete>
	
	<delete id="delete" parameterType="map">
		DELETE FROM T_BOARD
		WHERE bno = #{bno} AND WRITER = #{writer}		
	</delete>

<!-- 
	<insert id="insert" parameterType="BoardDto">
		INSERT INTO T_BOARD 
			(bno, title, CONTENT, WRITER)
		VALUES 
			(seq_board_num.nextval, #{title}, #{content}, #{writer})	
	</insert>
 -->	
	<insert id="insert" parameterType="BoardDto">
		INSERT INTO T_BOARD 
			(title, CONTENT, WRITER)
		VALUES 
			(#{title}, #{content}, #{writer})	
	</insert>	
	
<!-- 	
	<select id="selectPage" parameterType="map" resultType="BoardDto">
		<include refid="selectFromBoard" />
		ORDER BY REG_DATE DESC, BNO DESC 
		OFFSET #{offset} ROWS FETCH NEXT #{pageSize} ROWS ONLY
	</select>
 -->	
	<select id="selectPage" parameterType="map" resultType="BoardDto">
		<include refid="selectFromBoard" />
		ORDER BY REG_DATE DESC, BNO DESC 
		limit #{pageSize} offset #{offset}
	</select>	
	
	<select id="count" resultType="int">
		SELECT COUNT(*) FROM T_BOARD
	</select>
	
	<update id="increaseViewcnt" parameterType="int">
		UPDATE T_BOARD 
		SET VIEW_CNT = VIEW_CNT + 1
		WHERE bno = #{bno}	
	</update>

<!-- 	
	<update id="update" parameterType="BoardDto">
		UPDATE T_BOARD 
		SET TITLE = #{title}, CONTENT = #{content}, UP_DATE = SYSDATE 
		WHERE BNO = #{bno} AND WRITER = #{writer}	
	</update>
 -->	
	<update id="update" parameterType="BoardDto">
		UPDATE T_BOARD 
		SET TITLE = #{title}, CONTENT = #{content}, UP_DATE = now() 
		WHERE BNO = #{bno} AND WRITER = #{writer}	
	</update>
	
	<sql id="searchCondition">
		<choose>
			<when test='option=="T"'>
				AND title LIKE concat('%', #{keyword} ,'%')
			</when>
			<when test='option=="W"'>
				AND writer LIKE concat('%', #{keyword} ,'%')
			</when>	
			<otherwise>
				AND (title LIKE concat('%', #{keyword} ,'%')
				OR content LIKE concat('%', #{keyword} ,'%'))
			</otherwise>		
		</choose>
	</sql>	
	
	<select id="searchSelectPage" parameterType="SearchItem" resultType="BoardDto">
		SELECT bno, title, content, writer, view_cnt, comment_cnt, reg_date
		from t_board
		where true  
		<include refid="searchCondition" />
		ORDER BY REG_DATE DESC, BNO DESC 
		limit #{pageSize} offset #{offset}
	</select>	
	
	<select id="searchResultCnt" parameterType="SearchItem" resultType="int">
		SELECT COUNT(*) FROM T_BOARD
		where true  
		<include refid="searchCondition" />
	</select>	
</mapper>  


















